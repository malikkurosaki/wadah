<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:gravity="center_vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/notifyConLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/colorBiru2">
            <TextView
                android:id="@+id/notifyLogo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="X"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="24dp"
                android:textColor="@color/colorPutih"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/notifyTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/colorHitam"
                android:textStyle="bold"
                android:text="xxxxx"/>
            <TextView
                android:id="@+id/notifyBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="xxxxxxxxxxxxx"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
