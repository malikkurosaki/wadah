<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:folding-cell="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gradient_abu2"
                android:orientation="horizontal"
                android:paddingBottom="4dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Arrival"
                        android:textAlignment="center"
                        android:textColor="@color/colorHitam" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="5sp"
                        app:cardCornerRadius="5dp"
                        app:cardBackgroundColor="@color/colorBg1"
                        app:cardUseCompatPadding="true">

                        <TextView
                            android:id="@+id/arr"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:padding="4dp"
                            android:textAlignment="center"
                            android:textColor="@color/colorPutih"
                            android:textStyle="bold"
                            android:background="@drawable/gradient_navi"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|bottom">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/adult"/>
                            <TextView
                                android:id="@+id/dasArrivalAduld"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xx"
                                android:paddingStart="2dp"
                                android:paddingEnd="2dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|bottom">
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/child"/>
                            <TextView
                                android:id="@+id/dasArrivalChild"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xx"
                                android:paddingStart="2dp"
                                android:paddingEnd="2dp"
                                android:gravity="bottom"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="InHouse"
                        android:textAlignment="center"
                        android:textColor="@color/colorHitam" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="5sp"
                        app:cardBackgroundColor="@color/colorBg1"
                        app:cardCornerRadius="4dp"
                        app:cardUseCompatPadding="true">
                        <TextView
                            android:id="@+id/inH"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:padding="4dp"
                            android:textAlignment="center"
                            android:textColor="@color/colorPutih"
                            android:textStyle="bold"
                            android:background="@drawable/gradient_navi"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|bottom">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/adult"/>
                            <TextView
                                android:id="@+id/dasInhouseAdult"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xx"
                                android:paddingStart="2dp"
                                android:paddingEnd="2dp"
                                android:gravity="bottom"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|bottom">
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/child"/>
                            <TextView
                                android:id="@+id/dasInhouseChild"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xx"
                                android:paddingStart="2dp"
                                android:paddingEnd="2dp"
                                android:gravity="bottom"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Departure"
                        android:textAlignment="center"
                        android:textColor="@color/colorHitam" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="5sp"
                        app:cardBackgroundColor="@color/colorBg1"
                        app:cardCornerRadius="5dp"
                        app:cardUseCompatPadding="true">

                        <TextView
                            android:id="@+id/dep"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:background="@drawable/gradient_navi"
                            android:padding="4dp"
                            android:textAlignment="center"
                            android:textColor="@color/colorPutih"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|bottom">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/adult"/>
                            <TextView
                                android:id="@+id/dasDerpatureAdult"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xx"
                                android:paddingStart="2dp"
                                android:paddingEnd="2dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|bottom">
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/child"/>
                            <TextView
                                android:id="@+id/dasDerpatureChild"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xx"
                                android:paddingStart="2dp"
                                android:paddingEnd="2dp"
                                android:gravity="bottom"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Booking"
                        android:textAlignment="center"
                        android:textColor="@color/colorHitam" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="5sp"
                        app:cardBackgroundColor="@color/colorBg1"
                        app:cardCornerRadius="5dp"
                        app:cardUseCompatPadding="true">

                        <TextView
                            android:id="@+id/bok"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:padding="4dp"
                            android:textAlignment="center"
                            android:textColor="@color/colorPutih"
                            android:background="@drawable/gradient_navi"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|bottom">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/adult"/>
                            <TextView
                                android:id="@+id/dasBookingAdult"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xx"
                                android:paddingStart="2dp"
                                android:paddingEnd="2dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|bottom">
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/child" />
                            <TextView
                                android:id="@+id/dasBookingChild"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xx"
                                android:paddingStart="2dp"
                                android:paddingEnd="2dp"
                                android:gravity="bottom"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
