<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_samping"
    android:padding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:layout_weight="1"
            app:cardElevation="5sp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <me.itangqi.waveloadingview.WaveLoadingView
                    android:id="@+id/rs_wav"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:wlv_progressValue="80"
                    app:wlv_shapeType="rectangle"
                    app:wlv_triangle_direction="north"
                    app:wlv_waveAmplitude="40"
                    app:wlv_waveColor="@color/colorBg1"
                    android:background="@drawable/bg_gradient"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/rs_per"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center" />
                    <TextView
                        android:id="@+id/rs_today"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"/>
                    <TextView
                        android:id="@+id/rs_yesterday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bg_gradient_abu"
                    android:text="Total Room Sales"
                    android:textAlignment="center"
                    android:textColor="@color/colorHitam" />
                <com.rockerhieu.emojicon.EmojiconTextView
                    android:id="@+id/emj1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:textSize="35sp"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:layout_weight="1"
            app:cardElevation="5sp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <me.itangqi.waveloadingview.WaveLoadingView
                    android:id="@+id/ever_wave"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:wlv_borderColor="@color/colorTransparant"
                    app:wlv_progressValue="80"
                    app:wlv_shapeType="rectangle"
                    app:wlv_triangle_direction="north"
                    app:wlv_waveAmplitude="30"
                    app:wlv_waveColor="@color/colorBg1"
                    android:background="@drawable/bg_gradient"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/ever_per"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center" />
                    <TextView
                        android:id="@+id/ever_tod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"/>
                    <TextView
                        android:id="@+id/ever_yes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center" />
                </LinearLayout>
                <TextView
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Average Room Rate"
                    android:textAlignment="center"
                    android:textColor="@color/colorHitam"
                    android:background="@drawable/bg_gradient_abu" />
                <com.rockerhieu.emojicon.EmojiconTextView
                    android:id="@+id/emj2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:textSize="35sp"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardElevation="5sp"
            app:cardUseCompatPadding="true"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <me.itangqi.waveloadingview.WaveLoadingView
                    android:id="@+id/rev_wave"
                    android:layout_width="match_parent"
                    android:layout_height="100sp"
                    app:wlv_borderColor="@color/colorTransparant"
                    app:wlv_progressValue="90"
                    app:wlv_shapeType="rectangle"
                    app:wlv_triangle_direction="north"
                    app:wlv_waveAmplitude="40"
                    app:wlv_waveColor="@color/colorBg1"
                    android:background="@drawable/bg_gradient"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/rev_per"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center" />
                    <TextView
                        android:id="@+id/rev_tod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"/>
                    <TextView
                        android:id="@+id/rev_yes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center" />
                </LinearLayout>
                <TextView
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RevPar"
                    android:textAlignment="center"
                    android:textColor="@color/colorHitam"
                    android:background="@drawable/bg_gradient_abu" />
                <com.rockerhieu.emojicon.EmojiconTextView
                    android:id="@+id/emj3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:textSize="35sp"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardElevation="5sp"
            app:cardUseCompatPadding="true"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/bg_gradient_abu">
                <me.itangqi.waveloadingview.WaveLoadingView
                    android:id="@+id/leng_wave"
                    android:layout_width="match_parent"
                    android:layout_height="100sp"
                    app:wlv_borderColor="@color/colorTransparant"
                    app:wlv_progressValue="80"
                    app:wlv_shapeType="rectangle"
                    app:wlv_triangle_direction="north"
                    app:wlv_waveAmplitude="40"
                    app:wlv_waveColor="@color/colorBg1"
                    android:background="@drawable/bg_gradient"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/leng_per"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center" />
                    <TextView
                        android:id="@+id/leng_tod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"/>
                    <TextView
                        android:id="@+id/leng_yes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center" />

                </LinearLayout>
                <TextView
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Average Length Of Stay"
                    android:textAlignment="center"
                    android:textColor="@color/colorHitam"
                    android:background="@drawable/bg_gradient_abu" />
                <com.rockerhieu.emojicon.EmojiconTextView
                    android:id="@+id/emj4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:textSize="35sp"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardElevation="5sp"
            app:cardUseCompatPadding="true"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <me.itangqi.waveloadingview.WaveLoadingView
                    android:id="@+id/un_wave"
                    android:layout_width="match_parent"
                    android:layout_height="100sp"
                    app:wlv_progressValue="80"
                    app:wlv_shapeType="rectangle"
                    app:wlv_triangle_direction="north"
                    app:wlv_waveAmplitude="40"
                    app:wlv_waveColor="@color/colorBg1"
                    android:background="@drawable/bg_gradient"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/un_per"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center" />
                    <TextView
                        android:id="@+id/un_tod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"/>
                    <TextView
                        android:id="@+id/un_yes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/colorHitam"/>

                </LinearLayout>
                <TextView
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Room UnSold"
                    android:textColor="@color/colorHitam"
                    android:textAlignment="center"
                    android:background="@drawable/bg_gradient_abu" />
                <com.rockerhieu.emojicon.EmojiconTextView
                    android:id="@+id/emj5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:textSize="35sp"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardElevation="5sp"
            app:cardUseCompatPadding="true"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <me.itangqi.waveloadingview.WaveLoadingView
                    android:id="@+id/ges_wave"
                    android:layout_width="match_parent"
                    android:layout_height="100sp"
                    app:wlv_progressValue="90"
                    app:wlv_shapeType="rectangle"
                    app:wlv_triangle_direction="north"
                    app:wlv_waveAmplitude="30"
                    app:wlv_waveColor="@color/colorBg1"
                    android:background="@drawable/bg_gradient"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/ges_per"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center" />
                    <TextView
                        android:id="@+id/ges_tod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"/>
                    <TextView
                        android:id="@+id/ges_yes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center" />

                </LinearLayout>
                <TextView
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Guest"
                    android:textColor="@color/colorHitam"
                    android:textAlignment="center"
                    android:background="@drawable/bg_gradient_abu" />
                <com.rockerhieu.emojicon.EmojiconTextView
                    android:id="@+id/emj6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:textSize="35sp"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>
