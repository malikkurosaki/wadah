<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:folding-cell="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorAbu2">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorBg1">

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:elevation="10dp"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/bg_gradient_abu2">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <com.white.progressview.CircleProgressView
                        android:id="@+id/cir_prog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        app:progressNormalSize="2dp"
                        app:progressReachSize="4dp"
                        app:progressStyle="Normal"
                        app:radius="25dp"
                        app:progressTextSize="24sp"
                        app:innerBackgroundColor="@color/colorPutih"
                        app:progressNormalColor="@color/colorHijau" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yesterday" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="8dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <com.white.progressview.CircleProgressView
                        android:id="@+id/circle_progress_normal2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        app:progressNormalSize="2dp"
                        app:progressReachSize="4dp"
                        app:progressStyle="Normal"
                        app:radius="60dp"
                        app:progressTextSize="48sp"
                        app:progressTextColor="@color/colorPutih"
                        app:innerBackgroundColor="@color/colorAccent" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <com.white.progressview.CircleProgressView
                        android:id="@+id/circle_progress_normal3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        app:progressNormalSize="2dp"
                        app:progressReachSize="4dp"
                        app:progressStyle="Normal"
                        app:radius="25dp"
                        app:progressTextSize="24sp"
                        app:innerBackgroundColor="@color/colorPutih"
                        app:progressNormalColor="@color/colorAccent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tomorrow" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gradient_abu2"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Arrival"
                        android:textAlignment="center"
                        android:textColor="@color/colorHitam" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="5sp"
                        app:cardBackgroundColor="@color/colorBg1"
                        app:cardCornerRadius="14dp"
                        app:cardUseCompatPadding="true">

                        <TextView
                            android:id="@+id/arr"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:padding="4dp"
                            android:textAlignment="center"
                            android:textColor="@color/colorPutih"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="InHouse"
                        android:textAlignment="center"
                        android:textColor="@color/colorHitam" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="5sp"
                        app:cardBackgroundColor="@color/colorBg1"
                        app:cardCornerRadius="14dp"
                        app:cardUseCompatPadding="true">
                        <TextView
                            android:id="@+id/inH"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:padding="4dp"
                            android:textAlignment="center"
                            android:textColor="@color/colorPutih"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Depature"
                        android:textAlignment="center"
                        android:textColor="@color/colorHitam" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="5sp"
                        app:cardBackgroundColor="@color/colorBg1"
                        app:cardCornerRadius="14dp"
                        app:cardUseCompatPadding="true">

                        <TextView
                            android:id="@+id/dep"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:padding="4dp"
                            android:textAlignment="center"
                            android:textColor="@color/colorPutih"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Booking"
                        android:textAlignment="center"
                        android:textColor="@color/colorHitam" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="5sp"
                        app:cardBackgroundColor="@color/colorBg1"
                        app:cardCornerRadius="14dp"
                        app:cardUseCompatPadding="true">

                        <TextView
                            android:id="@+id/bok"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:padding="4dp"
                            android:textAlignment="center"
                            android:textColor="@color/colorPutih"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:layout_weight="1"
            app:cardElevation="5sp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <me.itangqi.waveloadingview.WaveLoadingView
                    android:id="@+id/rs_wav"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:wlv_progressValue="80"
                    app:wlv_shapeType="rectangle"
                    app:wlv_triangle_direction="north"
                    app:wlv_waveAmplitude="40"
                    app:wlv_waveColor="@color/colorBg1"
                    android:background="@drawable/bg_gradient"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/rs_per"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/colorAbu3"/>
                    <TextView
                        android:id="@+id/rs_today"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"/>
                    <TextView
                        android:id="@+id/rs_yesterday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/colorAbu3"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bg_gradient_abu"
                    android:text="Total Room Sales"
                    android:textAlignment="center"
                    android:textColor="@color/colorHitam" />
                <com.rockerhieu.emojicon.EmojiconTextView
                    android:id="@+id/emj2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:textSize="35sp"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:layout_weight="1"
            app:cardElevation="5sp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <me.itangqi.waveloadingview.WaveLoadingView
                    android:id="@+id/ever_wave"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:wlv_borderColor="@color/colorTransparant"
                    app:wlv_progressValue="80"
                    app:wlv_shapeType="rectangle"
                    app:wlv_triangle_direction="north"
                    app:wlv_waveAmplitude="30"
                    app:wlv_waveColor="@color/colorBg1"
                    android:background="@drawable/bg_gradient"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/ever_per"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/colorAbu3"/>
                    <TextView
                        android:id="@+id/ever_tod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"/>
                    <TextView
                        android:id="@+id/ever_yes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/colorAbu3"/>
                </LinearLayout>
                <TextView
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Average Room Rate"
                    android:textAlignment="center"
                    android:textColor="@color/colorHitam"
                    android:background="@drawable/bg_gradient_abu" />
                <com.rockerhieu.emojicon.EmojiconTextView
                    android:id="@+id/emj1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:textSize="35sp"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardElevation="5sp"
            app:cardUseCompatPadding="true"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <me.itangqi.waveloadingview.WaveLoadingView
                    android:id="@+id/rev_wave"
                    android:layout_width="match_parent"
                    android:layout_height="100sp"
                    app:wlv_borderColor="@color/colorTransparant"
                    app:wlv_progressValue="90"
                    app:wlv_shapeType="rectangle"
                    app:wlv_triangle_direction="north"
                    app:wlv_waveAmplitude="40"
                    app:wlv_waveColor="@color/colorBg1"
                    android:background="@drawable/bg_gradient"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/rev_per"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/colorAbu3"/>
                    <TextView
                        android:id="@+id/rev_tod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"/>
                    <TextView
                        android:id="@+id/rev_yes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/colorAbu3"/>
                </LinearLayout>
                <TextView
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RevPar"
                    android:textAlignment="center"
                    android:textColor="@color/colorHitam"
                    android:background="@drawable/bg_gradient_abu" />
                <com.rockerhieu.emojicon.EmojiconTextView
                    android:id="@+id/emj3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:textSize="35sp"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardElevation="5sp"
            app:cardUseCompatPadding="true"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/bg_gradient_abu">
                <me.itangqi.waveloadingview.WaveLoadingView
                    android:id="@+id/leng_wave"
                    android:layout_width="match_parent"
                    android:layout_height="100sp"
                    app:wlv_borderColor="@color/colorTransparant"
                    app:wlv_progressValue="80"
                    app:wlv_shapeType="rectangle"
                    app:wlv_triangle_direction="north"
                    app:wlv_waveAmplitude="40"
                    app:wlv_waveColor="@color/colorBg1"
                    android:background="@drawable/bg_gradient"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/leng_per"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/colorAbu3"/>
                    <TextView
                        android:id="@+id/leng_tod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"/>
                    <TextView
                        android:id="@+id/leng_yes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/colorAbu3"/>

                </LinearLayout>
                <TextView
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Average Length Of Stay"
                    android:textAlignment="center"
                    android:textColor="@color/colorHitam"
                    android:background="@drawable/bg_gradient_abu" />
                <com.rockerhieu.emojicon.EmojiconTextView
                    android:id="@+id/emj4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:textSize="35sp"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardElevation="5sp"
            app:cardUseCompatPadding="true"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <me.itangqi.waveloadingview.WaveLoadingView
                    android:id="@+id/un_wave"
                    android:layout_width="match_parent"
                    android:layout_height="100sp"
                    app:wlv_progressValue="80"
                    app:wlv_shapeType="rectangle"
                    app:wlv_triangle_direction="north"
                    app:wlv_waveAmplitude="40"
                    app:wlv_waveColor="@color/colorBg1"
                    android:background="@drawable/bg_gradient"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/un_per"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/colorAbu3"/>
                    <TextView
                        android:id="@+id/un_tod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"/>
                    <TextView
                        android:id="@+id/un_yes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/colorAbu3"/>

                </LinearLayout>
                <TextView
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Room UnSold"
                    android:textColor="@color/colorHitam"
                    android:textAlignment="center"
                    android:background="@drawable/bg_gradient_abu" />
                <com.rockerhieu.emojicon.EmojiconTextView
                    android:id="@+id/emj5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:textSize="35sp"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardElevation="5sp"
            app:cardUseCompatPadding="true"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <me.itangqi.waveloadingview.WaveLoadingView
                    android:id="@+id/ges_wave"
                    android:layout_width="match_parent"
                    android:layout_height="100sp"
                    app:wlv_progressValue="90"
                    app:wlv_shapeType="rectangle"
                    app:wlv_triangle_direction="north"
                    app:wlv_waveAmplitude="30"
                    app:wlv_waveColor="@color/colorBg1"
                    android:background="@drawable/bg_gradient"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/ges_per"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/colorAbu3"/>
                    <TextView
                        android:id="@+id/ges_tod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"/>
                    <TextView
                        android:id="@+id/ges_yes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/colorAbu3"/>

                </LinearLayout>
                <TextView
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Guest"
                    android:textColor="@color/colorHitam"
                    android:textAlignment="center"
                    android:background="@drawable/bg_gradient_abu" />
                <com.rockerhieu.emojicon.EmojiconTextView
                    android:id="@+id/emj6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:textSize="35sp"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <include layout="@layout/layout_bawah_dashboard"/>
</LinearLayout>
